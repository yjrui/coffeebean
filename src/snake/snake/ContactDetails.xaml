<UserControl x:Class="snake.ContactDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="16">联系人信息</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Label Width="70">姓名</Label>
                <TextBox Text="{Binding Name, Mode=OneWay}" MinWidth="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Label Width="70">电话号码</Label>
                <TextBox Text="{Binding Number, Mode=OneWay}" MinWidth="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
